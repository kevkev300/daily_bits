%h1= t('.title')

= link_to t('.new_list'), new_list_path

- if @lists.any?
  %table
    %tr
      %th= List.human_attribute_name(:id)
      %th= List.human_attribute_name(:name)
      %th= List.human_attribute_name(:description)
    - @lists.each do |list|
      %tr
        %td= link_to list.id, edit_list_path(list)
        %td= list.name
        %td= list.description
        %td= link_to t('destroy'), list_path(list), method: :delete, data: { confirm: t('basic_confirm') }